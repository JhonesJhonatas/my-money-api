{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@user/*": ["src/modules/user/*"],
      "@wallet/*": ["src/modules/wallet/*"],
      "@shared/*": ["src/shared/*"],
      "@infra/*": ["src/infra/*"],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
